{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "react",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": false,
		"baseUrl": "./",
		"paths": {
			"@/*": [
        "./src/*"
      ],
		},
		"noImplicitAny": true,
		"allowJs": true,
		// "types": ["@intlify/vite-plugin-vue-i18n/client"]
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}